<?xml version="1.0" encoding="utf-8" ?>
<!-- For more information on using transformations 
     see the web.config examples at http://go.microsoft.com/fwlink/?LinkId=214134. -->
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <appSettings>
    <add key="AzureWebJobsEnv" xdt:Transform="Remove" xdt:Locator="Match(key)" />
  </appSettings>
  <nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd" autoReload="true" throwExceptions="true" xdt:Transform="RemoveAttributes(internalLogLevel,internalLogFile)">
    <extensions xdt:Transform="Insert">
      <add assembly="SFA.DAS.NLog.Targets.Redis" />
    </extensions>
    <targets>
      <target xsi:type="Redis" name="RedisLog" appName="${appName}" environmentKey="EnvironmentName" connectionStringKey="LoggingRedisConnectionString" includeAllProperties="true" keySettingsKey="LoggingRedisKey" layout="${message}" xdt:Transform="Insert"/>
    </targets>
    <rules>
      <logger name="*" minlevel="Debug" writeTo="RedisLog" xdt:Transform="Replace" xdt:Locator="Condition(@name='*')" />
    </rules>
  </nlog>
</configuration>