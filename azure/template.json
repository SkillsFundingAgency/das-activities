{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "storageAccountName": {
            "type": "string"
        },
        "appServicePlanName": {
            "type": "string"
        },
        "aseName": {
            "type": "string"
        },
        "aseResourceGroup": {
            "type": "string"
        },
        "appServiceName": {
            "type": "string"
        },
        "cosmosDbName": {
            "type": "string"
        },
        "configurationStorageConnectionString": {
            "type": "string"
        },
        "environmentName": {
            "type": "string"
        },
        "loggingRedisConnectionString": {
            "type": "string"
        },
        "loggingRedisKey": {
            "type": "string"
        },
        "cosmosDbIpRangeFilter" : {
            "type": "string",
            "defaultValue": ""
        },
        "cosmosDatabase": {
            "type": "string"
        },
        "containerArray": {
            "type": "array"
        },
    },
    "variables": {},
    "resources": [
        {
            "apiVersion": "2017-05-10",
            "name": "storage-account-resources-deployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/storage-account-arm.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[parameters('storageAccountName')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "app-service-plan-resources-deployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/app-service-plan.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServicePlanName": {
                        "value": "[parameters('appServicePlanName')]"
                    },
                    "aseHostingEnvironmentName": {
                        "value": "[parameters('aseName')]"
                    },
                    "aseResourceGroup": {
                        "value": "[parameters('aseResourceGroup')]"
                    },
                    "aspSize": {
                        "value": "1"
                    },
                    "aspInstances": {
                        "value": 1
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "app-service-resources-deployment",
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/app-service.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "appServiceName": {
                        "value": "[parameters('appServiceName')]"
                    },
                    "appServicePlanName": {
                        "value": "[parameters('appServicePlanName')]"
                    },
                    "appServicePlanResourceGroup": {
                        "value": "[resourceGroup().name]"
                    },
                    "deployStagingSlot": {
                        "value": false
                    },
                    "appServiceAppSettings": {
                        "value": [
                            {
                                "name": "ConfigurationStorageConnectionString",
                                "value": "[parameters('configurationStorageConnectionString')]"
                            },
                            {
                                "name": "EnvironmentName",
                                "value": "[parameters('environmentName')]"
                            },
                            {
                                "name": "LoggingRedisConnectionString",
                                "value": "[parameters('loggingRedisConnectionString')]"
                            },
                            {
                                "name": "LoggingRedisKey",
                                "value": "[parameters('loggingRedisKey')]"
                            },
                            {
                                "name": "DashboardConnectionString",
                                "value": "[reference('storage-account-resources-deployment').outputs.storageConnectionString.value]"
                            },
                            {
                                "name": "StorageConnectionString",
                                "value": "[reference('storage-account-resources-deployment').outputs.storageConnectionString.value]"
                            },
                            {
                                "name": "AzureWebJobsDashboard",
                                "value": "[reference('storage-account-resources-deployment').outputs.storageConnectionString.value]"
                            },
                            {
                                "name": "AzureWebJobsStorage",
                                "value": "[reference('storage-account-resources-deployment').outputs.storageConnectionString.value]"
                            }
                        ]
                    }
                }
            },
            "dependsOn": [
                "app-service-plan-resources-deployment",
                "storage-account-resources-deployment"
            ]
        },
        {
            "apiVersion": "2017-05-10",
            "name": "cosmos-db-resources-deployment",
            "dependsOn": [],
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/cosmos-db.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmosDbName": {
                        "value": "[parameters('cosmosDbName')]"
                    },
                    "cosmosDbType": {
                        "value": "GlobalDocumentDB"
                    },
                    "defaultConsistencyLevel": {
                        "value": "Strong"
                    },
                    "ipRangeFilter": {
                        "value": "[parameters('cosmosDbIpRangeFilter')]"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "cosmos-db-database-deployment",
            "dependsOn": [
                "cosmos-db-resources-deployment"
            ],
            "type": "Microsoft.Resources/deployments",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/cosmos-db-database.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmosDbAccountName": {
                        "value": "[parameters('cosmosDbName')]"
                    },
                    "cosmosDatabase": {
                        "value": "[parameters('cosmosDatabase')]"
                    },
                    "cosmosDBType": {
                        "value": "GlobalDocumentDB"
                    }
                }
            }
        },
        {
            "apiVersion": "2017-05-10",
            "name": "[concat('cosmos-db-container-', parameters('containerArray')[copyIndex()].containerName)]",
            "dependsOn": [
                "cosmos-db-resources-deployment",
                "cosmos-db-database-deployment"
            ],
            "type": "Microsoft.Resources/deployments",
            "condition": "[greater(length(parameters('containerArray')), 0)]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/cosmos-db-container.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmosDbAccountName": {
                        "value": "[parameters('cosmosDbName')]"
                    },
                    "cosmosDatabase": {
                        "value": "[parameters('cosmosDatabase')]"
                    },
                    "cosmosDBType": {
                        "value": "GlobalDocumentDB"
                    },
                    "containerName": {
                        "value": "[parameters('containerArray')[copyIndex()].containerName]"
                    },
                    "pathArray": {
                        "value": "[parameters('containerArray')[copyIndex()].pathArray]"
                    }
                }
            },
            "copy": {
                "name": "containercopy",
                "count": "[length(parameters('containerArray'))]"
            }
        },
               {
            "apiVersion": "2017-05-10",
            "name": "[concat('cosmos-db-container-settings-', parameters('containerArray')[copyIndex()].containerName)]",
            "dependsOn": [
                "cosmos-db-resources-deployment",
                "cosmos-db-database-deployment",
                "[concat('cosmos-db-container-', parameters('containerArray')[copyIndex()].containerName)]"
            ],
            "type": "Microsoft.Resources/deployments",
            "condition": "[greater(length(parameters('containerArray')), 0)]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/master/templates/cosmos-db-container-settings.json",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "cosmosDbAccountName": {
                        "value": "[parameters('cosmosDbName')]"
                    },
                    "cosmosDatabase": {
                        "value": "[parameters('cosmosDatabase')]"
                    },
                    "cosmosDBType": {
                        "value": "GlobalDocumentDB"
                    },
                    "containerName": {
                        "value": "[parameters('containerArray')[copyIndex()].containerName]"
                    },
                    "throughput": {
                        "value": "[parameters('containerArray')[copyIndex()].throughput]"
                    }
                }
            },
            "copy": {
                "name": "containercopy",
                "count": "[length(parameters('containerArray'))]"
            }
        }
    ],
    "outputs": {}
}
